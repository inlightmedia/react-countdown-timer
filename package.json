{
  "name": "@inlightmedia/react-countdown-timer",
  "description": "A React component that counts down to a given ISO 8601 date/time, counts up from a given ISO 8601 date/time or counts down then counts up after the count down completes.",
  "version": "1.0.10",
  "scripts": {
    "build": "rollup -c",
    "format": "prettier --write \"**/*.+(ts|tsx|md|yml|json)\"",
    "watch": "rollup -cw",
    "cz": "git-cz",
    "lint": "eslint ./src --ext .jsx,.ts --ignore-pattern *.test.ts",
    "test:watch": "jest --watchAll",
    "clean": "rm -rf lib coverage",
    "coverage": "jest --coverage",
    "test": "npm run lint && npm run coverage",
    "prepublish": "yarn run clean && yarn test && yarn build"
  },
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "author": {
    "name": "Joshua Dyck",
    "email": "josh.dyck@inlightmedia.ca"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "countdown",
    "timer",
    "clock",
    "typescript"
  ],
  "contributors": [
    "Joshua Dyck"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/inlightmedia/react-countdown-timer"
  },
  "license": "MIT",
  "dependencies": {
    "moment-mini": "^2.24.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/commit-analyzer": "^7.0.0-beta.6",
    "@semantic-release/git": "^7.1.0-beta.9",
    "@semantic-release/npm": "^6.0.0-beta.5",
    "@semantic-release/release-notes-generator": "^7.3.5",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.8",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.8.5",
    "@types/react-dom": "^16.8.2",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "commitizen": "^4.0.3",
    "eslint": "^7.6.0",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.2.2",
    "react": "^16.13.1",
    "react-dom": "*",
    "react-test-renderer": "^16.8.6",
    "rollup": "^2.23.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-delete": "^1.1.0",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-terser": "^5.1.2",
    "semantic-release": "^16.0.0-beta.38",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  }
}
